import { SITE_TITLE } from '../consts';
---

<header>
  <nav>
    <div class="nav-container">
      <a href="/" class="logo">üõ°Ô∏è {SITE_TITLE}</a>
      <div class="nav-links">
        <a href="/">Home</a>
        <a href="/services">Services</a>
