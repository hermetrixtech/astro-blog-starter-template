---
import { COMPANY_NAME } from '../consts';
const currentYear = new Date().getFullYear();
---

<footer>
  <div class="container">
    <div class="footer-content">
      <div class="footer-info">
        <div class="footer-logo">HERMETRIX</div>
        <p class="footer-tagline">Strategic Operational Security Consulting</p>
        <a href="https://app.companiesoffice.govt.nz/companies/app/ui/pages/companies/companyBadgeSnippet/9387037?utm_campaign=companiesdirectlinks&utm_medium=webpage&utm_source=thecompany" target="_blank" rel="noopener noreferrer" class="company-badge-link">
          <img src="https://app.companiesoffice.govt.nz/companies/app/ui/themes/companies/images/CO_Details_dark_optimal_WEB.png" alt="New Zealand Companies Office Badge" style="border-style:none" />
        </a>
      </div>
      <div class="footer-links">
        <div class="footer-nav">
          <a href="/">Home</a>
          <a href="/products">Products</a>
          <a href="/services">Services</a>
          <a href="/about">About</a>
          <a href="/compliance">Compliance</a>
        </div>
        <div class="footer-contact">
          <a href="mailto:hello@hermetrix.nz">hello@hermetrix.nz</a>
        </div>
      </div>
    </div>
    <div class="footer-legal">
      <p>&copy; {currentYear} {COMPANY_NAME}. All rights reserved.</p>
    </div>
  </div>
</footer>

<style>
  footer {
    background-color: var(--background);
    color: var(--text-secondary);
    border-top: 1px solid var(--border-color);
    padding: var(--space-2xl) 0 var(--space-xl);
  }

  .footer-content {
    display: flex;
    justify-content: space-between;
    align-items: flex-start;
    margin-bottom: var(--space-xl);
  }

  .footer-info {
    max-width: 300px;
  }

  .footer-logo {
    font-family: var(--font-family-mono);
    font-weight: 700;
    font-size: 1rem;
    letter-spacing: 0.05em;
    margin-bottom: var(--space-sm);
    color: var(--text-primary);
  }

  .footer-tagline {
    font-size: 0.875rem;
    color: var(--text-muted);
    margin: 0 0 var(--space-sm) 0;
  }

  .company-badge-link img {
    max-width: 160px;
    display: block;
    margin-top: var(--space-sm);
  }

  .footer-links {
    display: flex;
    gap: var(--space-2xl);
  }

  .footer-nav {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .footer-contact {
    display: flex;
    flex-direction: column;
    gap: var(--space-sm);
  }

  .footer-links a {
    font-size: 0.875rem;
    color: var(--text-secondary);
    text-decoration: none;
    border-bottom: none;
    transition: color 0.2s ease;
  }

  .footer-links a:hover {
    color: var(--accent);
    opacity: 1;
  }

  .footer-legal {
    padding-top: var(--space-lg);
    border-top: 1px solid var(--border-color-light);
    text-align: center;
  }

  .footer-legal p {
    font-size: 0.75rem;
    color: var(--text-muted);
    margin: 0;
  }

  @media (max-width: 768px) {
    .footer-content {
      flex-direction: column;
      gap: var(--space-xl);
    }

    .footer-info {
      max-width: 100%;
      text-align: center;
    }

    .footer-links {
      width: 100%;
      justify-content: space-between;
    }
  }

  @media (max-width: 480px) {
    .footer-links {
      flex-direction: column;
      gap: var(--space-lg);
      align-items: center;
      text-align: center;
    }

    .footer-nav, .footer-contact {
      align-items: center;
    }
  }
</style>
