---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---

<!DOCTYPE html>
<html lang="en">
<head>
	<BaseHead 
		title={`Security Hardware NZ | FIPS Encrypted Storage | GrapheneOS Phone Auckland`}
		description="Buy certified security hardware in New Zealand. FIPS 140-3 encrypted storage, GrapheneOS privacy phones, Tails OS, secure shredders. Auckland pickup or NZ shipping available."
		keywords="security hardware NZ, FIPS encrypted storage Auckland, GrapheneOS phone New Zealand, encrypted USB NZ, secure phone Auckland, Tails OS New Zealand, data protection hardware"
	/>
</head>
<body>
	<a href="#main-content" class="skip-to-main">Skip to main content</a>
	<Header />
	<main id="main-content">
		<section class="hero">
			<div class="container">
				<h1>Certified Security Hardware</h1>
				<p class="tagline">High-assurance hardware for data protection and secure communications</p>
			</div>
		</section>

		<section class="section">
			<div class="container">
				<p class="intro-text">We provide enterprise-grade security hardware that meets stringent protection requirements. All products are carefully evaluated and selected for their certification standards, build quality, and operational security features.</p>
			</div>
		</section>

		<section class="free-consultation-banner">
			<div class="container">
				<div class="consultation-card">
					<div class="consultation-content">
						<span class="consultation-badge">100% Free • No Obligation</span>
						<h2>Not Sure Which Product Is Right?</h2>
						<p>Get a free 30-minute consultation. We'll help you understand which security hardware fits your needs, threat model, and budget.</p>
						<ul class="consultation-benefits">
							<li>Product recommendations for your use case</li>
							<li>Certification requirements explained</li>
							<li>Setup and configuration guidance</li>
						</ul>
					</div>
					<div class="consultation-cta">
						<a href="mailto:hello@hermetrix.nz?subject=Free Product Consultation" class="btn primary large">Book Free Consultation</a>
						<span class="cta-subtext">Usually respond within 24 hours</span>
					</div>
				</div>
			</div>
		</section>

		<section class="section">
			<div class="container">
				<h2>Available Hardware</h2>
				
				<div class="products-grid">
					<a href="/products/datashur-pro-plus-c" class="product-card-link">
						<div class="card product-card">
							<div class="product-image-placeholder">
								{/* Product image will go here */}
								<div class="image-placeholder-content">
									<span>Product Image</span>
								</div>
							</div>
							<div class="product-content">
								<div class="product-header">
									<h3>iStorage datAshur PRO+C</h3>
									<span class="badge badge-magenta">FIPS 140-3 Level 3</span>
								</div>
								<p class="product-description">Hardware-encrypted portable storage with military-grade security. FIPS 140-3 Level 3 certified with tamper-resistant construction and on-device PIN authentication.</p>
								<div class="product-footer">
									<span class="view-details">View Details →</span>
								</div>
							</div>
						</div>
					</a>

					<a href="/products/pixel-7a-grapheneos" class="product-card-link">
						<div class="card product-card">
							<div class="product-image-placeholder">
								<div class="image-placeholder-content">
									<img src="/images/graphenelogo.png" alt="GrapheneOS Logo" class="placeholder-logo" />
								</div>
							</div>
							<div class="product-content">
								<div class="product-header">
									<h3>Google Pixel 7a with GrapheneOS</h3>
									<span class="badge badge-cyan">Hardened Mobile Security</span>
								</div>
								<p class="product-description">Privacy-focused smartphone that puts you in control. Choose from: Free custom tailoring (recommended), our Privacy Essentials app package, or just GrapheneOS. Pixel 7a in stock; other models available (1-3 days).</p>
								<div class="product-price">
									<span class="price">$700 NZD</span>
									<span class="delivery-info">Shipping & Auckland CBD pickup available</span>
								</div>
								<div class="product-footer">
									<span class="view-details">View Details →</span>
								</div>
							</div>
						</div>
					</a>

					<a href="/products/tails-os-usb" class="product-card-link">
						<div class="card product-card">
							<div class="product-image-placeholder">
								<div class="image-placeholder-content">
									<span>Product Image</span>
								</div>
							</div>
							<div class="product-content">
								<div class="product-header">
									<h3>Tails OS USB Thumbdrive</h3>
									<span class="badge badge-blue">Live Operating System</span>
								</div>
								<p class="product-description">Portable privacy-focused operating system on bootable USB. Leaves no trace, routes all traffic through Tor, and provides encryption by default for anonymous computing.</p>
								<div class="product-footer">
									<span class="view-details">View Details →</span>
								</div>
							</div>
						</div>
					</a>

					<a href="/products/refurbished-shredders" class="product-card-link">
						<div class="card product-card">
							<div class="product-image-placeholder">
								<div class="image-placeholder-content">
									<span>Product Image</span>
								</div>
							</div>
							<div class="product-content">
								<div class="product-header">
									<h3>Refurbished Shredders</h3>
									<span class="badge badge-green">NSA-Approved Security</span>
								</div>
								<p class="product-description">High-security paper shredders for document destruction. Professionally refurbished cross-cut and micro-cut models meeting NSA/CSS EPL standards for classified materials.</p>
								<div class="product-footer">
									<span class="view-details">View Details →</span>
								</div>
							</div>
						</div>
					</a>
				</div>
			</div>
		</section>

		<section class="section">
			<div class="container text-center">
				<h2>Purchase & Consultation</h2>
				<p>Contact us to purchase security hardware or discuss your specific requirements. We provide consultation services to help you determine which products best fit your operational requirements, compliance regime, and threat model.</p>
				<div class="cta-buttons">
					<a href="mailto:hello@hermetrix.nz" class="btn primary">Order Products</a>
					<a href="/services" class="btn secondary">View Services</a>
				</div>
			</div>
		</section>
	</main>
	<Footer />

	<style>
		.hero {
			padding: var(--space-3xl) 0 var(--space-2xl);
		}

		.tagline {
			font-size: 1.25rem;
			color: var(--text-secondary);
			margin-top: var(--space-md);
			font-family: var(--font-family-mono);
			text-transform: uppercase;
			letter-spacing: 0.15em;
		}

		.intro-text {
			font-size: 1.125rem;
			max-width: 900px;
			margin: 0 auto;
			text-align: center;
			line-height: 1.8;
		}

		.products-grid {
			display: grid;
			grid-template-columns: repeat(2, 1fr);
			gap: var(--space-2xl);
			margin-top: var(--space-2xl);
		}

		.product-card-link {
			text-decoration: none;
			border: none;
			padding: 0;
			display: block;
			transition: transform 0.3s ease;
		}

		.product-card-link:hover {
			transform: translateY(-4px);
		}

		.product-card-link::before {
			display: none;
		}

		.product-card {
			margin: 0;
			background-color: rgba(0, 0, 0, 0.6);
			backdrop-filter: blur(5px);
			height: 100%;
			display: flex;
			flex-direction: column;
			transition: all 0.3s ease;
		}

		.product-card:hover {
			border-color: var(--accent-primary);
			box-shadow: 
				9px 9px 0 rgba(204, 0, 204, 0.2),
				0 0 30px rgba(204, 0, 204, 0.15);
		}

		.product-image-placeholder {
			width: 100%;
			height: 240px;
			background: linear-gradient(135deg, rgba(40, 40, 40, 0.8) 0%, rgba(21, 21, 21, 0.8) 100%);
			display: flex;
			align-items: center;
			justify-content: center;
			border-bottom: 2px solid var(--off-white);
			position: relative;
			overflow: hidden;
		}

		.product-image-placeholder::before {
			content: '';
			position: absolute;
			top: 0;
			left: 0;
			right: 0;
			bottom: 0;
			background: repeating-linear-gradient(
				45deg,
				transparent,
				transparent 10px,
				rgba(255, 255, 255, 0.02) 10px,
				rgba(255, 255, 255, 0.02) 20px
			);
		}

		.image-placeholder-content {
			position: relative;
			z-index: 1;
			display: flex;
			align-items: center;
			justify-content: center;
			width: 100%;
			height: 100%;
		}

		.image-placeholder-content span {
			color: var(--gray-400);
			font-family: var(--font-family-mono);
			font-size: 0.875rem;
			text-transform: uppercase;
			letter-spacing: 0.1em;
		}

		.placeholder-logo {
			height: 80px;
			width: auto;
			opacity: 0.9;
		}

		.product-content {
			padding: var(--space-lg);
			display: flex;
			flex-direction: column;
			flex: 1;
		}

		.product-header {
			margin-bottom: var(--space-md);
		}

		.product-header h3 {
			margin: 0 0 var(--space-sm) 0;
			color: var(--text-primary);
			font-weight: 900;
			font-size: 1.375rem;
		}

		.badge {
			display: inline-block;
			padding: var(--space-xs) var(--space-sm);
			border: 2px solid;
			border-radius: 6px;
			font-size: 0.6875rem;
			font-weight: 700;
			font-family: var(--font-family-mono);
			text-transform: uppercase;
			letter-spacing: 0.1em;
			box-shadow: 3px 3px 0 rgba(0, 0, 0, 0.2);
		}

		.badge-magenta {
			background: rgba(255, 0, 255, 0.1);
			border-color: var(--accent-primary);
			color: var(--accent-primary);
			box-shadow: 3px 3px 0 rgba(255, 0, 255, 0.2);
		}

		.badge-cyan {
			background: rgba(0, 255, 255, 0.1);
			border-color: var(--accent-secondary);
			color: var(--accent-secondary);
			box-shadow: 3px 3px 0 rgba(0, 255, 255, 0.2);
		}

		.badge-blue {
			background: rgba(0, 82, 204, 0.1);
			border-color: var(--accent-tertiary);
			color: var(--accent-tertiary);
			box-shadow: 3px 3px 0 rgba(0, 82, 204, 0.2);
		}

		.badge-green {
			background: rgba(0, 204, 82, 0.1);
			border-color: var(--acid-green);
			color: var(--acid-green);
			box-shadow: 3px 3px 0 rgba(0, 204, 82, 0.2);
		}

		.product-description {
			font-size: 0.9375rem;
			line-height: 1.6;
			color: var(--text-secondary);
			margin-bottom: var(--space-md);
			flex: 1;
		}

		.product-price {
			display: flex;
			flex-direction: column;
			gap: var(--space-xs);
			margin-bottom: var(--space-md);
			padding: var(--space-md);
			background: rgba(0, 204, 204, 0.05);
			border-left: 3px solid var(--accent-secondary);
			border-radius: 4px;
		}

		.product-price .price {
			font-size: 1.5rem;
			font-weight: 900;
			color: var(--accent-secondary);
			font-family: var(--font-family-mono);
		}

		.product-price .delivery-info {
			font-size: 0.8125rem;
			color: var(--text-secondary);
			font-family: var(--font-family-mono);
		}

		.product-footer {
			margin-top: auto;
			padding-top: var(--space-md);
			border-top: 2px solid rgba(255, 255, 255, 0.1);
		}

		.view-details {
			color: var(--accent-primary);
			font-family: var(--font-family-mono);
			font-size: 0.875rem;
			font-weight: 700;
			text-transform: uppercase;
			letter-spacing: 0.05em;
			transition: all 0.3s ease;
		}

		.product-card-link:hover .view-details {
			color: var(--accent-secondary);
			text-shadow: 0 0 8px rgba(0, 255, 255, 0.4);
		}

		.cta-buttons {
			display: flex;
			gap: var(--space-lg);
			justify-content: center;
			margin-top: var(--space-xl);
		}

		.free-consultation-banner {
			padding: var(--space-2xl) 0;
			background: linear-gradient(135deg, rgba(204, 0, 204, 0.1) 0%, rgba(0, 204, 204, 0.1) 100%);
			border-top: 2px solid var(--accent-primary);
			border-bottom: 2px solid var(--accent-secondary);
			position: relative;
			overflow: hidden;
		}

		.free-consultation-banner::before {
			content: '';
			position: absolute;
			top: 0;
			left: -100%;
			width: 100%;
			height: 100%;
			background: linear-gradient(90deg, transparent, rgba(255, 255, 255, 0.1), transparent);
			animation: shimmer 3s infinite;
		}

		@keyframes shimmer {
			0% { left: -100%; }
			100% { left: 100%; }
		}

		.consultation-card {
			background: rgba(0, 0, 0, 0.7);
			backdrop-filter: blur(10px);
			border: 3px solid var(--accent-primary);
			border-radius: 12px;
			padding: var(--space-2xl);
			box-shadow: 
				0 0 30px rgba(204, 0, 204, 0.3),
				0 0 60px rgba(0, 204, 204, 0.2),
				inset 0 0 30px rgba(204, 0, 204, 0.05);
			display: grid;
			grid-template-columns: 1fr auto;
			gap: var(--space-2xl);
			align-items: center;
			position: relative;
		}

		.consultation-badge {
			display: inline-block;
			padding: var(--space-xs) var(--space-md);
			background: linear-gradient(135deg, var(--magenta), var(--cyan));
			border-radius: 20px;
			font-size: 0.75rem;
			font-weight: 900;
			text-transform: uppercase;
			letter-spacing: 0.1em;
			margin-bottom: var(--space-md);
			color: var(--black);
			box-shadow: 0 4px 15px rgba(204, 0, 204, 0.4);
		}

		.consultation-content h2 {
			margin: 0 0 var(--space-md) 0;
			font-size: 2.25rem;
			color: var(--accent-primary);
			font-weight: 900;
			text-shadow: 0 0 20px rgba(204, 0, 204, 0.5);
		}

		.consultation-content p {
			margin: 0 0 var(--space-lg) 0;
			color: var(--text-secondary);
			font-size: 1.125rem;
			line-height: 1.6;
		}

		.consultation-benefits {
			list-style: none;
			padding: 0;
			margin: 0;
			display: flex;
			flex-direction: column;
			gap: var(--space-sm);
		}

		.consultation-benefits li {
			padding-left: 1.5rem;
			position: relative;
			color: var(--text-secondary);
			font-size: 0.9375rem;
		}

		.consultation-benefits li::before {
			content: "✓";
			position: absolute;
			left: 0;
			color: var(--accent-secondary);
			font-weight: bold;
			font-size: 1.125rem;
		}

		.consultation-cta {
			display: flex;
			flex-direction: column;
			align-items: center;
			gap: var(--space-sm);
		}

		.btn.large {
			padding: var(--space-lg) var(--space-2xl);
			font-size: 1.125rem;
			white-space: nowrap;
			animation: pulse 2s infinite;
		}

		@keyframes pulse {
			0%, 100% { transform: scale(1); }
			50% { transform: scale(1.05); }
		}

		.cta-subtext {
			font-size: 0.8125rem;
			color: var(--gray-400);
			font-family: var(--font-family-mono);
			text-transform: uppercase;
			letter-spacing: 0.05em;
		}

		@media (max-width: 1024px) {
			.products-grid {
				gap: var(--space-xl);
			}
		}

		@media (max-width: 768px) {
			.consultation-card {
				grid-template-columns: 1fr;
				gap: var(--space-xl);
				padding: var(--space-xl);
				text-align: center;
			}

			.consultation-content h2 {
				font-size: 1.75rem;
			}

			.consultation-benefits {
				align-items: flex-start;
			}

			.btn.large {
				width: 100%;
				padding: var(--space-md) var(--space-xl);
			}

			.hero {
				padding: var(--space-2xl) 0 var(--space-xl);
			}

			.tagline {
				font-size: 1rem;
			}

			.intro-text {
				font-size: 1rem;
			}

			.products-grid {
				grid-template-columns: 1fr;
				gap: var(--space-xl);
			}

			.product-image-placeholder {
				height: 200px;
			}

			.product-header h3 {
				font-size: 1.25rem;
			}

			.cta-buttons {
				flex-direction: column;
				align-items: stretch;
			}
		}

		@media (max-width: 480px) {
			.hero {
				padding: var(--space-xl) 0 var(--space-lg);
			}

			.product-card {
				padding: var(--space-md);
			}

			.product-content {
				padding: var(--space-md);
			}

			.product-image-placeholder {
				height: 180px;
			}

			.product-header h3 {
				font-size: 1.125rem;
			}

			.badge {
				font-size: 0.625rem;
				padding: var(--space-xs) var(--space-xs);
			}

			.product-description {
				font-size: 0.875rem;
			}
		}
	</style>
</body>
</html>
