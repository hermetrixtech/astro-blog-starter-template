---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE } from '../consts';
---

<BaseHead 
  title={`FIPS 140-3 Level 3 Encrypted Drives | ${SITE_TITLE}`} 
  description="Eliminate data breach risk from lost devices. The iStorage datAshur PRO+C delivers FIPS 140-3 Level 3 certified hardware encryption for NZ businesses." 
/>

<!-- Load AOS Styles in head -->
<link href="https://unpkg.com/aos@2.3.1/dist/aos.css" rel="stylesheet" />

<Header />

<main>

    <!-- HERO SECTION -->
    <section class="hero">
        <div class="hero-background">
            <div class="floating-orb orb-1"></div>
            <div class="floating-orb orb-2"></div>
            <div class="floating-orb orb-3"></div>
            <div class="floating-orb orb-4"></div>
            <div class="grid-overlay"></div>
        </div>

        <div class="hero-content">
            <div class="container">
                <h1 data-aos="fade-up">FIPS 140-3 Level 3 Certified Encryption</h1>
                <span class="tagline" data-aos="fade-up" data-aos-delay="100">The highest assurance hardware-encrypted drive available</span>
                <p data-aos="fade-up" data-aos-delay="200">When "good enough" security isn't good enough for your data protection needs.</p>

                <div class="cta-buttons" data-aos="fade-up" data-aos-delay="300">
                    <a href="/consultation" class="btn primary">Get Your Free Security Assessment</a>
                    <a href="/services" class="btn secondary">Our Services</a>
                </div>
            </div>
        </div>

        <div class="scroll-indicator">
            <div class="chevron"></div>
            <div class="chevron"></div>
            <div class="chevron"></div>
        </div>
    </section>

    <!-- MAIN CONTENT -->
    <section class="main-content">
        <div class="container">

            <!-- SERVICE DISCLAIMER -->
            <div class="section service-disclaimer" data-aos="fade-up">
                <div class="disclaimer-card">
                    <h3>Important: Our Role as Security Consultants</h3>
                    <p><strong>We do not sell hardware directly.</strong> As OPSEC consultants, we:</p>
                    <ul>
                        <li>Evaluate your specific security requirements</li>
                        <li>Recommend certified hardware solutions that meet your needs</li>
                        <li>Help source through authorized distribution channels</li>
                        <li>Provide implementation guidance and security configuration</li>
                    </ul>
                    <p class="disclaimer-note">You get expert guidance plus genuine, properly configured hardware.</p>
                </div>
            </div>

            <!-- PRODUCT SHOWCASE -->
            <div class="section product-showcase" data-aos="fade-up">
                <h2>Our Exclusive Recommendation</h2>
                <p class="section-intro">
                    After extensive evaluation of the certified security market, we recommend one product
                    that stands above the rest for maximum physical data protection.
                </p>

                <div class="product-feature">
                    <div class="product-header">
                        <h3 class="product-name">iStorage datAshur PRO+C</h3>
                        <div class="product-badge">FIPS 140-3 Level 3 Certified</div>
                    </div>

                    <p class="product-description">
                        The highest commercial assurance available for hardware-encrypted storage
                    </p>

                    <div class="technical-specs">
                        <div class="spec-category">
                            <h4>Security Certification</h4>
                            <ul>
                                <li><strong>FIPS 140-3 Level 3</strong> - Highest commercial certification</li>
                                <li><strong>Hardware Encryption</strong> - AES 256-bit XTS mode</li>
                                <li><strong>Tamper-Proof Design</strong> - Active intrusion detection</li>
                            </ul>
                        </div>
                        
                        <div class="spec-category">
                            <h4>Physical Protection</h4>
                            <ul>
                                <li><strong>Brute-Force Protection</strong> - Locks after 20 failed PIN attempts</li>
                                <li><strong>Cryptographic Erasure</strong> - Data destroyed on intrusion detection</li>
                                <li><strong>Time-Based Auto-Lock</strong> - Configurable inactivity timeout</li>
                            </ul>
                        </div>
                        
                        <div class="spec-category">
                            <h4>Operational Features</h4>
                            <ul>
                                <li><strong>Built-in Keypad</strong> - On-device PIN entry</li>
                                <li><strong>Zero Software Dependencies</strong> - Works on any system</li>
                                <li><strong>Cross-Platform</strong> - Windows, macOS, Linux compatible</li>
                            </ul>
                        </div>
                    </div>

                    <div class="specs-grid">
                        <div class="spec-item" data-aos="fade-right" data-aos-delay="100">
                            <div class="spec-icon security-icon"></div>
                            <div class="spec-content">
                                <strong>Tamper-Proof Security</strong>
                                <span>Active intrusion detection with cryptographic erasure</span>
                            </div>
                        </div>

                        <div class="spec-item" data-aos="fade-right" data-aos-delay="150">
                            <div class="spec-icon brute-force-icon"></div>
                            <div class="spec-content">
                                <strong>Brute-Force Protection</strong>
                                <span>Permanently locks after 20 failed PIN attempts</span>
                            </div>
                        </div>

                        <div class="spec-item" data-aos="fade-right" data-aos-delay="200">
                            <div class="spec-icon compatibility-icon"></div>
                            <div class="spec-content">
                                <strong>Zero Dependencies</strong>
                                <span>Works instantly on any system without drivers</span>
                            </div>
                        </div>

                        <div class="spec-item" data-aos="fade-right" data-aos-delay="250">
                            <div class="spec-icon encryption-icon"></div>
                            <div class="spec-content">
                                <strong>Built-in Keypad</strong>
                                <span>AES 256-bit encryption on the device</span>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <!-- SERVICE APPROACH -->
            <div class="section service-approach" data-aos="fade-up">
                <h2>How We Help You Implement Certified Security</h2>
                <p class="section-intro">As security consultants, we guide you through the entire process of selecting and implementing the right certified hardware.</p>
                
                <div class="approach-grid">
                    <div class="approach-card" data-aos="flip-left" data-aos-delay="100">
                        <div class="approach-number">01</div>
                        <h4>Assess & Specify</h4>
                        <p>We perform an OPSEC Health Check to determine the right certified hardware for your specific security requirements.</p>
                    </div>

                    <div class="approach-card" data-aos="flip-left" data-aos-delay="200">
                        <div class="approach-number">02</div>
                        <h4>Source & Configure</h4>
                        <p>We help procure through authorized channels and pre-configure devices with your security policies.</p>
                    </div>

                    <div class="approach-card" data-aos="flip-left" data-aos-delay="300">
                        <div class="approach-number">03</div>
                        <h4>Deploy & Train</h4>
                        <p>We ensure your team understands how to properly use the devices within your security practices.</p>
                    </div>
                </div>
            </div>

            <!-- FINAL CTA -->
            <div class="section final-cta" data-aos="zoom-in">
                <h2>Get Expert Guidance on Certified Security</h2>
                <p>Stop guessing about hardware security. Get our expert recommendation and implementation guidance.</p>

                <div class="cta-buttons">
                    <a href="/consultation" class="btn primary large">Get Your Free Threat Assessment</a>
                    <a href="mailto:contact@hermetrix.nz?subject=Certified Hardware Consultation" class="btn secondary">
                        Discuss Hardware Options
                    </a>
                </div>
            </div>

        </div>
    </section>

</main>

<Footer />

<!-- AOS Script must run on client -->
<script is:client src="https://unpkg.com/aos@2.3.1/dist/aos.js"></script>

<script is:client>
AOS.init({
    duration: 800,
    once: true,
    offset: 100
});
</script>

<style>

/* ---------------------- */
/* GENERAL LAYOUT RULES   */
/* ---------------------- */

.container {
    max-width: 1200px;
    margin: 0 auto;
    padding: 0 2rem;
}

.section {
    padding: 4rem 0;
}

/* ---------------------- */
/* SERVICE DISCLAIMER     */
/* ---------------------- */

.service-disclaimer {
    padding-top: 2rem;
}

.disclaimer-card {
    background: linear-gradient(135deg, #fff3cd 0%, #ffeaa7 100%);
    border: 1px solid #ffd351;
    border-radius: 12px;
    padding: 2rem;
    text-align: center;
}

.disclaimer-card h3 {
    color: #856404;
    margin-bottom: 1rem;
    font-size: 1.3rem;
}

.disclaimer-card p {
    color: #856404;
    margin-bottom: 1rem;
}

.disclaimer-card ul {
    text-align: left;
    color: #856404;
    margin: 1rem 0;
    padding-left: 1.5rem;
}

.disclaimer-card li {
    margin-bottom: 0.5rem;
}

.disclaimer-note {
    font-style: italic;
    margin-top: 1rem;
    padding-top: 1rem;
    border-top: 1px solid rgba(133, 100, 4, 0.3);
}

/* ---------------------- */
/* HERO                   */
/* ---------------------- */

.hero {
    position: relative;
    z-index: 1;
    height: 100vh;
    display: flex;
    flex-direction: column;
    justify-content: center;
    color: white;
    overflow: hidden;
    background: linear-gradient(135deg, #0a0f14 0%, #14213d 50%, #1a365d 100%);
}

.hero-background {
    position: absolute;
    inset: 0;
    z-index: 1;
}

.hero-content {
    position: relative;
    z-index: 3;
    text-align: center;
}

/* Floating orbs & grid */
.floating-orb {
    position: absolute;
    border-radius: 50%;
    background: radial-gradient(circle, rgba(99, 179, 237, 0.3) 0%, transparent 70%);
    filter: blur(40px);
    animation: float 6s ease-in-out infinite;
    z-index: 1;
}

.orb-1 { width: 300px; height: 300px; top: 10%; left: 10%; animation-delay: 0s; }
.orb-2 { width: 200px; height: 200px; top: 60%; right: 15%; animation-delay: 2s; }
.orb-3 { width: 250px; height: 250px; bottom: 20%; left: 20%; animation-delay: 4s; }
.orb-4 { width: 180px; height: 180px; top: 30%; right: 25%; animation-delay: 1s; }

.grid-overlay {
    position: absolute;
    inset: 0;
    background-image:
        linear-gradient(rgba(99, 179, 237, 0.1) 1px, transparent 1px),
        linear-gradient(90deg, rgba(99, 179, 237, 0.1) 1px, transparent 1px);
    background-size: 50px 50px;
    animation: gridMove 20s linear infinite;
    z-index: 1;
}

.hero h1 {
    max-width: 800px;
    margin: 0 auto 1rem;
    font-size: 3.5rem;
    font-weight: 800;
    background: linear-gradient(135deg, #ffffff 0%, #e2e8f0 100%);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
}

/* Scroll Indicator */
.scroll-indicator {
    position: absolute;
    bottom: 30px;
    left: 50%;
    transform: translateX(-50%);
    z-index: 3;
}

.chevron {
    width: 20px;
    height: 5px;
    background: rgba(255, 255, 255, 0.5);
    margin: 3px 0;
    border-radius: 2px;
    animation: scrollBounce 2s infinite;
}

.chevron:nth-child(2) { animation-delay: 0.2s; }
.chevron:nth-child(3) { animation-delay: 0.4s; }

/* ---------------------- */
/* MAIN CONTENT           */
/* ---------------------- */

.main-content {
    background: white;
    position: relative;
    z-index: 2;
}

.section-intro {
    text-align: center;
    max-width: 600px;
    margin: 0 auto 3rem;
    color: #4a5568;
    font-size: 1.1rem;
}

/* Product Feature */
.product-feature {
    background: linear-gradient(135deg, #f8fafc 0%, #edf2f7 100%);
    border-radius: 20px;
    padding: 3rem;
    border: 1px solid #e2e8f0;
    box-shadow: 0 20px 40px rgba(0,0,0,0.1);
}

.product-header {
    display: flex;
    justify-content: space-between;
    align-items: center;
    flex-wrap: wrap;
    gap: 1rem;
    margin-bottom: 1rem;
}

.product-name {
    color: #1a365d;
    font-size: 2rem;
    margin: 0;
    font-weight: 700;
}

.product-badge {
    background: linear-gradient(135deg, #3182ce 0%, #2b6cb0 100%);
    color: white;
    padding: 8px 16px;
    border-radius: 20px;
    font-size: 0.9rem;
    font-weight: 600;
}

.product-description {
    color: #2d3748;
    font-size: 1.2rem;
    margin-bottom: 2rem;
    font-weight: 500;
}

/* Technical Specs */
.technical-specs {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
    margin-bottom: 3rem;
    padding: 2rem;
    background: white;
    border-radius: 12px;
    border: 1px solid #e2e8f0;
}

.spec-category h4 {
    color: #1a365d;
    margin-bottom: 1rem;
    font-size: 1.1rem;
    font-weight: 600;
}

.spec-category ul {
    list-style: none;
    padding: 0;
}

.spec-category li {
    margin-bottom: 0.75rem;
    color: #4a5568;
    line-height: 1.4;
}

.spec-category strong {
    color: #2d3748;
    font-weight: 600;
}

/* Spec Icons (replacing emojis) */
.spec-icon {
    width: 40px;
    height: 40px;
    border-radius: 8px;
    flex-shrink: 0;
    position: relative;
}

.security-icon {
    background: linear-gradient(135deg, #e53e3e 0%, #c53030 100%);
}
.security-icon::after {
    content: "üîí";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 1.2rem;
}

.brute-force-icon {
    background: linear-gradient(135deg, #ed8936 0%, #dd6b20 100%);
}
.brute-force-icon::after {
    content: "üõ°Ô∏è";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 1.2rem;
}

.compatibility-icon {
    background: linear-gradient(135deg, #38a169 0%, #2f855a 100%);
}
.compatibility-icon::after {
    content: "‚ö°";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 1.2rem;
}

.encryption-icon {
    background: linear-gradient(135deg, #805ad5 0%, #6b46c1 100%);
}
.encryption-icon::after {
    content: "üîë";
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-50%, -50%);
    font-size: 1.2rem;
}

/* Specs Grid */
.specs-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
    gap: 1.5rem;
}

.spec-item {
    display: flex;
    gap: 1rem;
    padding: 1.5rem;
    background: white;
    border-radius: 12px;
    border: 1px solid #e2e8f0;
    transition: all 0.3s ease;
    align-items: flex-start;
}

.spec-item:hover {
    transform: translateY(-5px);
    border-color: #3182ce;
    box-shadow: 0 10px 25px rgba(0,0,0,0.1);
}

.spec-content {
    flex: 1;
}

.spec-content strong {
    color: #1a365d;
    font-weight: 700;
    font-size: 1rem;
    display: block;
    margin-bottom: 0.25rem;
}

.spec-content span {
    color: #4a5568;
    font-size: 0.9rem;
    line-height: 1.4;
}

/* Service Approach */
.service-approach {
    background: #f7fafc;
    background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%);
}

.approach-grid {
    display: grid;
    grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
    gap: 2rem;
}

.approach-card {
    background: white;
    padding: 2rem;
    border-radius: 16px;
    text-align: center;
    border: 1px solid #e2e8f0;
    transition: all 0.3s ease;
}

.approach-card:hover {
    transform: translateY(-8px);
    box-shadow: 0 20px 40px rgba(0,0,0,0.15);
}

.approach-number {
    font-size: 3rem;
    font-weight: 800;
    color: #e2e8f0;
    margin-bottom: 1rem;
    line-height: 1;
}

.approach-card h4 {
    color: #1a365d;
    font-size: 1.3rem;
    margin-bottom: 1rem;
    font-weight: 600;
}

.approach-card p {
    color: #4a5568;
    line-height: 1.6;
}

/* Final CTA */
.final-cta {
    text-align: center;
    background: linear-gradient(135deg, #1a365d 0%, #2d3748 100%);
    color: white;
    border-radius: 20px;
    margin: 4rem 0;
    padding: 4rem 2rem;
}

.final-cta h2 {
    color: white;
    margin-bottom: 1rem;
}

.final-cta p {
    color: #e2e8f0;
    margin-bottom: 2rem;
    font-size: 1.1rem;
}

/* Buttons */
.btn {
    display: inline-block;
    padding: 0.75rem 2rem;
    border-radius: 0.5rem;
    font-weight: 600;
    text-decoration: none;
    cursor: pointer;
    transition: 0.3s;
    border: none;
}

.btn.primary {
    background: linear-gradient(135deg, #90cdf4 0%, #63b3ed 100%);
    color: #1a365d;
}

.btn.primary:hover {
    transform: translateY(-2px);
    box-shadow: 0 10px 25px rgba(99, 179, 237, 0.3);
}

.btn.secondary {
    border: 2px solid #90cdf4;
    color: #90cdf4;
    background: transparent;
}

.btn.secondary:hover {
    background: rgba(144,205,244,0.1);
    transform: translateY(-2px);
}

.btn.large {
    padding: 1rem 2.5rem;
    font-size: 1.1rem;
}

.cta-buttons {
    display: flex;
    gap: 1rem;
    justify-content: center;
    flex-wrap: wrap;
}

/* Animations */
@keyframes float {
    0%, 100% { transform: translateY(0) scale(1); }
    50% { transform: translateY(-20px) scale(1.05); }
}

@keyframes gridMove {
    0% { transform: translate(0,0); }
    100% { transform: translate(50px,50px); }
}

@keyframes scrollBounce {
    0%, 100% { transform: scaleX(1); opacity: 0.5; }
    50% { transform: scaleX(1.2); opacity: 1; }
}

/* Responsive */
@media (max-width: 768px) {
    .hero h1 { font-size: 2.5rem; }
    .tagline { font-size: 1.2rem; }
    .product-header { flex-direction: column; align-items: flex-start; }
    .specs-grid, .technical-specs { grid-template-columns: 1fr; }
    .approach-grid { grid-template-columns: 1fr; }
    .cta-buttons { flex-direction: column; }
    .technical-specs { padding: 1.5rem; }
}

@media (max-width: 480px) {
    .hero { height: 90vh; }
    .hero h1 { font-size: 2rem; }
    .product-name { font-size: 1.5rem; }
    .section { padding: 3rem 0; }
    .product-feature { padding: 2rem; }
}

</style>