---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title="Hermetrix — Digital Security Solutions" description="Professional security consulting and certified hardware solutions for your digital protection needs." />
		<meta name="viewport" content="width=device-width,initial-scale=1" />
	</head>

	<body>
		<Header />
		<main>
			<section class="hero">
				<div class="container">
					<h1>Complete Digital Protection</h1>
					<p class="tagline">Expert security consulting and certified hardware solutions for businesses and individuals.</p>
					<div class="cta-buttons">
						<a href="/services" class="btn primary">Our Services</a>
						<a href="/products" class="btn secondary">View Products</a>
					</div>
				</div>
			</section>

			<section class="section">
				<div class="container">
					<h2>What We Offer</h2>
					<div class="grid grid-3">
						<div class="card">
							<h3>Security Consulting</h3>
							<p>Comprehensive OPSEC assessments and strategic security planning to protect your digital assets.</p>
							<a href="/services">Learn more →</a>
						</div>
						<div class="card">
							<h3>Certified Hardware</h3>
							<p>FIPS 140-3 Level 3 certified encrypted storage devices and security hardware.</p>
							<a href="/products">View products →</a>
						</div>
						<div class="card">
							<h3>Compliance Support</h3>
							<p>Guidance on NZISM, PSR, and international security frameworks.</p>
							<a href="/compliance">Learn more →</a>
						</div>
					</div>
				</div>
			</section>

			<section class="section">
				<div class="container text-center">
					<h2>Trusted Security Partner</h2>
					<p>Hermetrix provides independent security consulting and certified hardware recommendations for organizations requiring the highest level of data protection.</p>
					<div class="cta-buttons">
						<a href="/about" class="btn secondary">About Us</a>
					</div>
				</div>
			</section>
		</main>
		<Footer />

		<style>
			.hero {
				padding: var(--space-3xl) 0;
				min-height: calc(100vh - var(--header-height) - 4rem);
				display: flex;
				align-items: center;
			}

			.hero h1 {
				font-size: 3.5rem;
				margin-bottom: var(--space-lg);
			}

			.tagline {
				font-size: 1.5rem;
				color: var(--text-secondary);
				max-width: 700px;
				margin-bottom: var(--space-2xl);
			}

			.cta-buttons {
				display: flex;
				gap: var(--space-md);
				margin-top: var(--space-xl);
			}

			.card h3 {
				color: var(--accent);
				margin-bottom: var(--space-md);
			}

			.card a {
				display: inline-block;
				margin-top: var(--space-md);
				font-weight: 600;
			}

			@media (max-width: 768px) {
				.hero h1 {
					font-size: 2.5rem;
				}
				
				.tagline {
					font-size: 1.25rem;
				}

				.cta-buttons {
					flex-direction: column;
					align-items: stretch;
				}

				.btn {
					width: 100%;
					text-align: center;
				}
			}
		</style>
	</body>
</html>
