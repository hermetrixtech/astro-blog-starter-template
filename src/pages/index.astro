---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import FAQSection from '../components/FAQSection.astro';

const faqs = [
	{
		question: "What makes Hermetrix different from other security companies?",
		answer: "We specialize in understanding New Zealand's unique privacy landscape. Unlike global providers, we focus on practical, economical solutions that work within NZ's regulatory environment and market constraints. No upselling, no vendor commissions—just honest advice tailored to Kiwi needs."
	},
	{
		question: "Do I need to be tech-savvy to work with you?",
		answer: "Not at all. We explain everything in plain language and implement solutions that are easy to use. Whether you're a student, small business owner, or enterprise, we make privacy accessible without unnecessary complexity."
	},
	{
		question: "What areas of New Zealand do you serve?",
		answer: "We serve all of New Zealand remotely, with local presence in Auckland. Our solutions work nationwide, and we understand the unique challenges of being geographically isolated."
	},
	{
		question: "How much do your services cost?",
		answer: "We offer free 30-minute consultations to assess your needs. Our pricing is transparent and based on your actual requirements—if a $50 solution works, we won't sell you a $5,000 one. Contact us for specific quotes."
	},
	{
		question: "What is GrapheneOS and why would I want it?",
		answer: "GrapheneOS is a privacy-focused Android operating system. We configure it specifically for New Zealand users with local carrier compatibility and NZ app requirements, giving you maximum privacy without sacrificing functionality."
	},
	{
		question: "Are you compliant with NZ privacy laws?",
		answer: "Yes, we operate in full compliance with New Zealand's Privacy Act and understand local regulatory requirements including NZISM frameworks. We can help you navigate these requirements too."
	}
];
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead 
			title="Hermetrix — Privacy Made Easy for Kiwis | NZ Security Hardware & Consulting" 
			description="New Zealand's trusted privacy and security company. GrapheneOS phones, FIPS encrypted storage, and practical security consulting. 30-min free consultation. Auckland-based, serving all NZ. Making privacy accessible and economical for every Kiwi."
			keywords="NZ privacy solutions, affordable security New Zealand, GrapheneOS NZ, encrypted storage Auckland, privacy consultant New Zealand, Kiwi security company, NZ security hardware, FIPS encryption NZ, privacy made easy"
		/>
		<meta name="viewport" content="width=device-width,initial-scale=1" />
		
		<!-- WebSite Structured Data with Search Action -->
		<script type="application/ld+json">
			{
				"@context": "https://schema.org",
				"@type": "WebSite",
				"name": "Hermetrix",
				"alternateName": "Hermetrix Security NZ",
				"url": "https://hermetrix.nz",
				"description": "Privacy Made Easy for Kiwis - New Zealand security hardware and consulting",
				"inLanguage": "en-NZ",
				"potentialAction": {
					"@type": "SearchAction",
					"target": {
						"@type": "EntryPoint",
						"urlTemplate": "https://hermetrix.nz/search?q={search_term_string}"
					},
					"query-input": "required name=search_term_string"
				}
			}
		</script>
	</head>

	<body>
		<a href="#main-content" class="skip-to-main">Skip to main content</a>
		<Header />
		<main id="main-content">
		<section class="hero">
			<div class="container">
				<div class="hero-content">
					<div class="hero-text">
						<h1>Privacy Made Easy for Kiwis</h1>
						<p class="tagline">Practical, affordable security solutions tailored to New Zealand individuals and businesses.</p>
						<div class="cta-buttons">
							<a href="/services" class="btn primary">Our Services</a>
							<a href="/products" class="btn secondary">View Products</a>
						</div>
					</div>
					<img src="/images/logo.png" alt="Hermetrix Logo" class="hero-logo" width="450" height="450" loading="eager" fetchpriority="high" />
				</div>
			</div>
		</section>
		
		<section class="free-consultation-banner">
			<div class="container">
				<div class="consultation-card">
					<div class="consultation-content">
						<span class="consultation-badge">100% Free • No Obligation</span>
						<h2>30-Minute Security Consultation</h2>
						<p>Get expert guidance on your security concerns. We'll assess your risks, identify vulnerabilities, and give you actionable steps you can implement immediately.</p>
						<ul class="consultation-benefits">
							<li>Current security risk assessment</li>
							<li>Immediate vulnerabilities identification</li>
							<li>Quick wins you can implement this week</li>
						</ul>
					</div>
					<div class="consultation-cta">
						<a href="mailto:hello@hermetrix.nz?subject=Free 30-Minute Security Consultation" class="btn primary large">Book Free Consultation</a>
						<span class="cta-subtext">Usually respond within 24 hours</span>
					</div>
				</div>
			</div>
		</section>
			<section class="section">
				<div class="container">
					<h2>What We Offer</h2>
					<div class="grid grid-3">
						<div class="card">
							<h3>Privacy-Focused Hardware</h3>
							<p>GrapheneOS phones, FIPS-certified encrypted storage, and other security devices — selected for New Zealand users and available locally.</p>
							<a href="/products">View products →</a>
						</div>
						<div class="card">
							<h3>Security Guidance</h3>
							<p>Practical security assessments and implementation support tailored to New Zealand's unique privacy landscape and your specific needs.</p>
							<a href="/services">Learn more →</a>
						</div>
						<div class="card">
							<h3>NZ Compliance Support</h3>
							<p>Understanding New Zealand's Privacy Act, NZISM, and security frameworks in practical terms that make sense for Kiwi businesses.</p>
							<a href="/compliance">Learn more →</a>
						</div>
					</div>
				</div>
			</section>

			<FAQSection faqs={faqs} />

			<section class="section">
				<div class="container text-center">
					<h2>Security Made for New Zealand</h2>
					<p>We understand the unique privacy challenges facing New Zealanders. Let us help you implement practical, affordable protection tailored to your needs.</p>
					<div class="cta-buttons">
						<a href="/about" class="btn secondary">About Us</a>
					</div>
				</div>
			</section>
		</main>
		<Footer />

		<style>
			.hero {
				padding: var(--space-3xl) 0;
				min-height: 600px;
				display: flex;
				align-items: center;
				position: relative;
			}

			.hero-content {
				display: flex;
				align-items: center;
				gap: var(--space-3xl);
				width: 100%;
			}

			.hero-logo {
				max-width: 450px;
				width: 100%;
				height: auto;
				flex-shrink: 0;
				aspect-ratio: 1 / 1;
			}

			.hero-text {
				flex: 1;
				min-width: 0;
			}

			.hero h1 {
				font-size: 4.5rem;
				margin-bottom: var(--space-lg);
				font-weight: 900;
				line-height: 1;
			}

			.tagline {
				font-size: 1.5rem;
				color: var(--text-secondary);
				max-width: 700px;
				margin-bottom: var(--space-2xl);
				font-family: var(--font-family-mono);
				text-transform: uppercase;
				letter-spacing: 0.1em;
			}

			.cta-buttons {
				display: flex;
				gap: var(--space-lg);
				margin-top: var(--space-xl);
				justify-content: center;
			}

			.free-consultation-banner {
				padding: var(--space-2xl) 0;
				background: linear-gradient(135deg, rgba(204, 0, 204, 0.1) 0%, rgba(0, 204, 204, 0.1) 100%);
				border-top: 2px solid var(--accent-primary);
				border-bottom: 2px solid var(--accent-secondary);
				position: relative;
			}

			.consultation-card {
				background: rgba(0, 0, 0, 0.7);
				backdrop-filter: blur(10px);
				-webkit-backdrop-filter: blur(10px);
				border: 2px solid var(--accent-primary);
				border-radius: 12px;
				padding: var(--space-2xl);
				box-shadow: 
					0 0 15px rgba(153, 51, 204, 0.15),
					0 0 30px rgba(51, 153, 153, 0.1),
					inset 0 0 15px rgba(153, 51, 204, 0.03);
				display: grid;
				grid-template-columns: 1fr auto;
				gap: var(--space-2xl);
				align-items: center;
				position: relative;
				width: 100%;
				max-width: 100%;
				min-height: 250px;
			}

			.consultation-badge {
				display: inline-block;
				padding: var(--space-xs) var(--space-md);
				background: linear-gradient(135deg, var(--magenta), var(--cyan));
				border-radius: 20px;
				font-size: 0.75rem;
				font-weight: 900;
				text-transform: uppercase;
				letter-spacing: 0.1em;
				margin-bottom: var(--space-md);
				color: var(--white);
				box-shadow: 0 2px 8px rgba(153, 51, 204, 0.2);
			}

			.consultation-content h2 {
				margin: 0 0 var(--space-md) 0;
				font-size: 2.25rem;
				color: var(--accent-primary);
				font-weight: 900;
				text-shadow: 0 0 20px rgba(204, 0, 204, 0.5);
			}

			.consultation-content p {
				margin: 0 0 var(--space-lg) 0;
				color: var(--text-secondary);
				font-size: 1.125rem;
				line-height: 1.6;
			}

			.consultation-benefits {
				list-style: none;
				padding: 0;
				margin: 0;
				display: flex;
				flex-direction: column;
				gap: var(--space-sm);
			}

			.consultation-benefits li {
				padding-left: 1.5rem;
				position: relative;
				color: var(--text-secondary);
				font-size: 0.9375rem;
			}

			.consultation-benefits li::before {
				content: "✓";
				position: absolute;
				left: 0;
				color: var(--accent-secondary);
				font-weight: bold;
				font-size: 1.125rem;
			}

			.consultation-cta {
				display: flex;
				flex-direction: column;
				align-items: center;
				gap: var(--space-sm);
			}

			.btn.large {
				padding: var(--space-lg) var(--space-2xl);
				font-size: 1.125rem;
				white-space: nowrap;
				animation: pulse 2s infinite;
			}

			@keyframes pulse {
				0%, 100% { transform: scale(1); }
				50% { transform: scale(1.05); }
			}

			.cta-subtext {
				font-size: 0.8125rem;
				color: var(--gray-400);
				font-family: var(--font-family-mono);
				text-transform: uppercase;
				letter-spacing: 0.05em;
			}

		.card {
			background-color: rgba(0, 0, 0, 0.5);
			backdrop-filter: blur(5px);
			display: flex;
			flex-direction: column;
		}

		.card h3 {
			color: var(--accent-primary);
			margin-bottom: var(--space-md);
			font-weight: 900;
		}

		.card p {
			color: var(--text-secondary);
			flex: 1;
		}

		.card a {
			display: inline-block;
			margin-top: var(--space-md);
			font-weight: 600;
			color: var(--white);
			border-bottom: 2px solid var(--white);
			transition: all 0.3s ease;
		}

		.card a:hover {
			color: var(--accent-secondary);
			border-bottom-color: var(--accent-secondary);
		}			@media (max-width: 768px) {
				.consultation-card {
					grid-template-columns: 1fr;
					gap: var(--space-xl);
					padding: var(--space-lg);
					text-align: center;
				}

				.consultation-content h2 {
					font-size: 1.75rem;
					line-height: 1.2;
				}

				.consultation-benefits {
					align-items: flex-start;
				}

				.btn.large {
					width: 100%;
					padding: var(--space-md) var(--space-xl);
				}

				.hero {
					min-height: auto;
					padding: var(--space-2xl) 0;
				}

				.hero-content {
					flex-direction: column;
					align-items: center;
					gap: var(--space-xl);
					text-align: center;
				}

				.hero-logo {
					max-width: 200px;
					order: -1;
				}

				.hero h1 {
					font-size: 2.5rem;
				}
				
				.tagline {
					font-size: 1rem;
				}

				.cta-buttons {
					flex-direction: column;
					align-items: stretch;
					width: 100%;
					max-width: 100%;
				}

				.cta-buttons .btn {
					width: 100%;
					white-space: nowrap;
					overflow: hidden;
					text-overflow: ellipsis;
				}
			}

			@media (max-width: 480px) {
				.hero {
					padding: var(--space-xl) 0;
				}

				.hero h1 {
					font-size: 2rem;
					line-height: 1.1;
					word-break: break-word;
				}

				.tagline {
					font-size: 0.875rem;
					line-height: 1.4;
				}

				.hero-logo {
					max-width: 150px;
				}

				.consultation-content h2 {
					font-size: 1.5rem;
				}

				.consultation-card {
					padding: var(--space-md);
				}
			}
		</style>
	</body>
</html>
