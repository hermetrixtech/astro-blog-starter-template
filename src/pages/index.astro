---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<section class="hero">
				<div class="container">
					<h1>üõ°Ô∏è Hermetrix Technologies</h1>
					<p class="tagline">Secure Communications & Cybersecurity</p>
					<p>Professional security solutions for the Asia-Pacific region.</p>
					<div class="contact">
						<p>Email: <a href="mailto:hello@hermetrix.nz">hello@hermetrix.nz</a></p>
						<p>Security: <a href="mailto:security@hermetrix.nz">security@hermetrix.nz</a></p>
					</div>
				</div>
			</section>
		</main>
		<Footer />

		<style>
			.hero {
				padding: 4rem 1rem;
				text-align: center;
				min-height: 60vh;
				display: flex;
				align-items: center;
				justify-content: center;
				background: #f8fafc;
			}
			.container {
				max-width: 600px;
			}
			h1 {
				font-size: 2.5rem;
				margin-bottom: 1rem;
				color: #1a365d;
			}
			.tagline {
				font-size: 1.25rem;
				color: #4a5568;
				margin-bottom: 2rem;
			}
			.contact {
				margin-top: 2rem;
				padding: 1.5rem;
				background: white;
				border-radius: 0.5rem;
			}
			a {
				color: #1a365d;
				text-decoration: none;
			}
			a:hover {
				text-decoration: underline;
			}
		</style>
	</body>
</html>
