---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead 
			title="Hermetrix — Security Consulting & Certified Hardware | Auckland, NZ" 
			description="New Zealand security consulting and FIPS 140-3 certified hardware solutions. OPSEC assessments, GrapheneOS phones, encrypted storage. Auckland-based, NZ-wide service."
			keywords="security consulting NZ, OPSEC consultant Auckland, FIPS encrypted storage New Zealand, GrapheneOS phone NZ, security hardware Auckland, data protection consultant"
		/>
		<meta name="viewport" content="width=device-width,initial-scale=1" />
	</head>

	<body>
		<a href="#main-content" class="skip-to-main">Skip to main content</a>
		<Header />
		<main id="main-content">
		<section class="hero">
			<div class="container">
				<div class="hero-content">
					<div class="hero-text">
						<h1>Complete Digital Protection</h1>
						<p class="tagline">Expert security consulting and certified hardware solutions for businesses and individuals.</p>
						<div class="cta-buttons">
							<a href="/services" class="btn primary">Our Services</a>
							<a href="/products" class="btn secondary">View Products</a>
						</div>
					</div>
					<img src="/images/logo.png" alt="Hermetrix Logo" class="hero-logo" />
				</div>
			</div>
		</section>			<section class="section">
				<div class="container">
					<h2>What We Offer</h2>
					<div class="grid grid-3">
						<div class="card">
							<h3>Security Consulting</h3>
							<p>Comprehensive OPSEC assessments and strategic security planning to protect your digital assets.</p>
							<a href="/services">Learn more →</a>
						</div>
						<div class="card">
							<h3>Certified Hardware</h3>
							<p>FIPS 140-3 Level 3 certified encrypted storage devices and security hardware.</p>
							<a href="/products">View products →</a>
						</div>
						<div class="card">
							<h3>Compliance Support</h3>
							<p>Guidance on NZISM, PSR, and international security frameworks.</p>
							<a href="/compliance">Learn more →</a>
						</div>
					</div>
				</div>
			</section>

			<section class="section">
				<div class="container text-center">
					<h2>Trusted Security Partner</h2>
					<p>Hermetrix provides independent security consulting and certified hardware recommendations for organizations requiring the highest level of data protection.</p>
					<div class="cta-buttons">
						<a href="/about" class="btn secondary">About Us</a>
					</div>
				</div>
			</section>
		</main>
		<Footer />

		<style>
			.hero {
				padding: var(--space-3xl) 0;
				min-height: calc(100vh - var(--header-height) - 4rem);
				display: flex;
				align-items: center;
				position: relative;
			}

			.hero-content {
				display: flex;
				align-items: center;
				gap: var(--space-3xl);
				width: 100%;
			}

			.hero-logo {
				max-width: 450px;
				width: 100%;
				height: auto;
				flex-shrink: 0;
			}

			.hero-text {
				flex: 1;
				min-width: 0;
			}

			.hero h1 {
				font-size: 4.5rem;
				margin-bottom: var(--space-lg);
				font-weight: 900;
				line-height: 1;
			}

			.tagline {
				font-size: 1.5rem;
				color: var(--text-secondary);
				max-width: 700px;
				margin-bottom: var(--space-2xl);
				font-family: var(--font-family-mono);
				text-transform: uppercase;
				letter-spacing: 0.1em;
			}

			.cta-buttons {
				display: flex;
				gap: var(--space-lg);
				margin-top: var(--space-xl);
			}

			.card {
				background-color: rgba(0, 0, 0, 0.5);
				backdrop-filter: blur(5px);
			}

			.card h3 {
				color: var(--accent-primary);
				margin-bottom: var(--space-md);
				font-weight: 900;
			}

			.card p {
				color: var(--text-secondary);
			}

			.card a {
				display: inline-block;
				margin-top: var(--space-md);
				font-weight: 600;
				color: var(--white);
				border-bottom: 2px solid var(--white);
				transition: all 0.3s ease;
			}

			.card a:hover {
				color: var(--accent-secondary);
				border-bottom-color: var(--accent-secondary);
			}

			@media (max-width: 768px) {
				.hero {
					min-height: auto;
					padding: var(--space-2xl) 0;
				}

				.hero-content {
					flex-direction: column;
					align-items: center;
					gap: var(--space-xl);
					text-align: center;
				}

				.hero-logo {
					max-width: 200px;
					order: -1;
				}

				.hero h1 {
					font-size: 2.5rem;
				}
				
				.tagline {
					font-size: 1rem;
				}

				.cta-buttons {
					flex-direction: column;
					align-items: stretch;
					width: 100%;
				}
			}

			@media (max-width: 480px) {
				.hero {
					padding: var(--space-xl) 0;
				}

				.hero h1 {
					font-size: 2rem;
				}

				.tagline {
					font-size: 0.875rem;
				}

				.hero-logo {
					max-width: 150px;
				}
			}
		</style>
	</body>
</html>
