---
import BaseHead from '../components/BaseHead.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { SITE_TITLE, SITE_DESCRIPTION, CONTACT_EMAIL, SECURITY_EMAIL } from '../consts';
---

<!doctype html>
<html lang="en">
	<head>
		<BaseHead title={SITE_TITLE} description={SITE_DESCRIPTION} />
	</head>
	<body>
		<Header />
		<main>
			<!-- Hero Section -->
			<section class="hero">
				<div class="container">
					<h1>üõ°Ô∏è Hermetrix Technologies</h1>
					<p class="tagline">Secure Communications & Cybersecurity Solutions</p>
					<p class="subtitle">
						Specializing in certified security solutions and compliance guidance for the Asia-Pacific region.
					</p>
					<div class="cta-buttons">
						<a href="/services" class="btn primary">Our Services</a>
						<a href="/compliance" class="btn secondary">Compliance Guidance</a>
					</div>
				</div>
			</section>

			<!-- Services Overview -->
			<section class="services-overview">
				<div class="container">
					<h2>Our Expertise</h2>
					<div class="services-grid">
						<div class="service-card">
							<h3>Secure Communications</h3>
							<p>Implementation and support of enterprise-grade encrypted communication devices and systems for sensitive environments.</p>
							<a href="/services#communications" class="learn-more">Learn more ‚Üí</a>
						</div>
						<div class="service-card">
							<h3>Data Protection</h3>
							<p>Certified encrypted storage solutions and data protection strategies aligned with security framework requirements.</p>
							<a href="/products" class="learn-more">Learn more ‚Üí</a>
						</div>
						<div class="service-card">
							<h3>Compliance Guidance</h3>
							<p>Expert guidance on NZISM, PSR, and international security standards to help navigate compliance requirements.</p>
							<a href="/compliance" class="learn-more">Learn more ‚Üí</a>
						</div>
					</div>
				</div>
			</section>

			<!-- Why Choose Us -->
			<section class="why-us">
				<div class="container">
					<h2>Why Hermetrix Technologies</h2>
					<div class="features-grid">
						<div class="feature">
							<h3>Security-First Approach</h3>
							<p>Every solution is evaluated against certified security standards and framework requirements.</p>
						</div>
						<div class="feature">
							<h3>APAC Regional Focus</h3>
							<p>Deep understanding of New Zealand and Asia-Pacific security requirements and regulations.</p>
						</div>
						<div class="feature">
							<h3>Enterprise Expertise</h3>
							<p>Solutions designed for business and government environments with complex security needs.</p>
						</div>
						<div class="feature">
							<h3>Practical Guidance</h3>
							<p>Helping organizations understand and work toward security compliance through appropriate solutions.</p>
						</div>
					</div>
				</div>
			</section>

			<!-- Contact CTA -->
			<section class="contact-cta">
				<div class="container">
					<h2>Start Securing Your Operations</h2>
					<p>Contact us to discuss your security requirements and how we can help.</p>
					<div class="contact-info">
						<div class="contact-method">
							<strong>General Inquiries</strong>
							<a href={`mailto:${CONTACT_EMAIL}`}>{CONTACT_EMAIL}</a>
						</div>
						<div class="contact-method">
							<strong>Security Matters</strong>
							<a href={`mailto:${SECURITY_EMAIL}`}>{SECURITY_EMAIL}</a>
						</div>
					</div>
					<div class="cta-buttons">
						<a href="mailto:hello@hermetrix.nz" class="btn primary">Email Us</a>
						<a href="/services" class="btn secondary">View Services</a>
					</div>
				</div>
			</section>
		</main>
		<Footer />

		<style>
			body {
				margin: 0;
				min-height: 100vh;
				display: flex;
				flex-direction: column;
				font-family: system-ui, sans-serif;
				line-height: 1.6;
			}

			main {
				flex: 1;
			}

			/* Hero Section */
			.hero {
				padding: 5rem 1rem;
				text-align: center;
				background: linear-gradient(135deg, #1a365d 0%, #2d3748 100%);
				color: white;
			}

			.hero h1 {
				font-size: 3rem;
				margin-bottom: 1rem;
				font-family: 'Segoe UI', 'Montserrat', 'Arial Black', Arial, sans-serif;
				font-weight: 900;
				color: #f7fafc;
				text-shadow: 0 2px 12px rgba(26,54,93,0.25), 0 1px 0 #2d3748;
			}

			.tagline {
				font-size: 1.5rem;
				font-weight: 300;
				margin-bottom: 1rem;
				color: #90cdf4;
			}

			.subtitle {
				font-size: 1.2rem;
				max-width: 600px;
				margin: 0 auto 2.5rem;
				color: #cbd5e0;
				opacity: 0.9;
			}

			.cta-buttons {
				margin-top: 2rem;
			}

			.btn {
				display: inline-block;
				padding: 0.75rem 2rem;
				margin: 0 0.5rem;
				text-decoration: none;
				border-radius: 0.375rem;
				font-weight: 600;
				transition: all 0.2s;
			}

			.btn.primary {
				background-color: #90cdf4;
				color: #1a365d;
			}

			.btn.primary:hover {
				background-color: #63b3ed;
			}

			.btn.secondary {
				background-color: transparent;
				color: #90cdf4;
				border: 2px solid #90cdf4;
			}

			.btn.secondary:hover {
				background-color: #90cdf4;
				color: #1a365d;
			}

			/* Services Overview */
			.services-overview {
				padding: 5rem 1rem;
				background: #f8fafc;
			}

			.services-overview h2 {
				text-align: center;
				margin-bottom: 3rem;
				font-size: 2.5rem;
				color: #1a365d;
			}

			.services-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(300px, 1fr));
				gap: 2rem;
				max-width: 1200px;
				margin: 0 auto;
			}

			.service-card {
				padding: 2.5rem 2rem;
				background: white;
				border-radius: 0.5rem;
				box-shadow: 0 4px 6px rgba(0, 0, 0, 0.05);
				border-top: 4px solid #1a365d;
			}

			.service-card h3 {
				color: #1a365d;
				margin-bottom: 1rem;
				font-size: 1.3rem;
			}

			.learn-more {
				color: #1a365d;
				font-weight: 600;
				text-decoration: none;
				display: inline-block;
				margin-top: 1rem;
			}

			.learn-more:hover {
				text-decoration: underline;
			}

			/* Why Us Section */
			.why-us {
				padding: 5rem 1rem;
				background: white;
			}

			.why-us h2 {
				text-align: center;
				margin-bottom: 3rem;
				font-size: 2.5rem;
				color: #1a365d;
			}

			.features-grid {
				display: grid;
				grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
				gap: 2rem;
				max-width: 1200px;
				margin: 0 auto;
			}

			.feature {
				text-align: center;
				padding: 2rem 1rem;
			}

			.feature h3 {
				color: #1a365d;
				margin-bottom: 1rem;
				font-size: 1.2rem;
			}

			/* Contact CTA */
			.contact-cta {
				padding: 5rem 1rem;
				background: #2d3748;
				color: white;
				text-align: center;
			}

			.contact-cta h2 {
				margin-bottom: 1rem;
			}

			.contact-info {
				display: flex;
				justify-content: center;
				gap: 3rem;
				margin: 2rem 0;
				flex-wrap: wrap;
			}

			.contact-method {
				text-align: center;
			}

			.contact-method strong {
				display: block;
				margin-bottom: 0.5rem;
				color: #90cdf4;
			}

			.contact-cta a {
				color: #90cdf4;
				text-decoration: none;
			}

			.contact-cta a:hover {
				color: white;
			}

			.container {
				max-width: 1200px;
				margin: 0 auto;
			}

			/* Mobile Responsiveness */
			@media (max-width: 768px) {
				.hero h1 {
					font-size: 2.5rem;
				}

				.tagline {
					font-size: 1.3rem;
				}

				.subtitle {
					font-size: 1.1rem;
				}

				.cta-buttons {
					display: flex;
					flex-direction: column;
					gap: 1rem;
					align-items: center;
				}

				.btn {
					margin: 0;
					width: 200px;
				}

				.contact-info {
					flex-direction: column;
					gap: 1.5rem;
				}

				.services-grid,
				.features-grid {
					grid-template-columns: 1fr;
				}
			}
		</style>
	</body>
</html>
